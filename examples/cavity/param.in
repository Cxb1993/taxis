grid
{
   type   gmsh 
   file   cavity.msh
   cell   median
}

numeric
{
   time_mode    steady
   time_scheme  rk3
   time_step    0.0
   cfl          0.8
   max_iter     100000
   final_time   1.0e20
   min_residue  1.0e-6
   reconstruct  second
   bc_scheme    weak
}

material
{
   gamma       1.4
   gas_const   287.0
   viscosity   constant  1.0
   prandtl     0.7
   model       ns
   flux        roe
}

constants
{
   T   300.0
   p   86100.0
   U   100.0
}

initial_condition
{
   temperature  T
   xvelocity    0.0
   yvelocity    0.0
   zvelocity    0.0
   pressure     p
}

boundary
{
   100001
   100002
   100004
   {
      type         noslip
      xvelocity    0.0
      yvelocity    0.0
      zvelocity    0.0
      temperature  T
   }

   100003
   {
      type         noslip
      xvelocity    U
      yvelocity    0.0
      zvelocity    0.0
      temperature  T
   }
}

integrals
{
}

output
{
   format     vtk
   frequency  1000
   variables
   {
      mach 
      density
   }
   restart    true
   global_KE  false
}
