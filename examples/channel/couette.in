grid
{
   type   gmsh 
   file   channel.msh
   cell   median
}

numeric
{
   time_mode    steady
   time_scheme  lusgs
   cfl          1e6
   max_iter     5000
   final_time   1e20
   min_residue  1.0e-10
   reconstruct  second
   bc_scheme    weak
}

material
{
   gamma       1.4
   gas_const   287
   viscosity   constant  1.0
   prandtl     0.72
   model       ns
   flux        roe
}

constants
{
   T    350.0
   U    100.0
   p    1e5
}

initial_condition
{
   temperature  T
   xvelocity    0.0
   yvelocity    0.0
   zvelocity    0.0
   pressure     p
}

boundary
{
   100001 // inlet boundary
   {
      type        farfield
      temperature T
      xvelocity   U*y
      yvelocity   0.0
      zvelocity   0.0
      pressure    p
   }

   100002 // outlet boundary
   {
      type         pressure
      pressure     p
   }

   100003 // bottom
   {
      type         noslip
      xvelocity    0.0
      yvelocity    0.0
      zvelocity    0.0
      temperature  T
   }

   100004 // top
   {
      type         noslip
      xvelocity    U
      yvelocity    0.0
      zvelocity    0.0
      temperature  T
   }
}

integrals
{
}

output
{
   format      vtk
   frequency   1000
   variables
   {
      mach density
   }
   restart     true
}
