# Possible compilers: g++, icpc
CXX    = icpc

#
# DONT CHANGE ANYTHING BELOW
# UNLESS YOU KNOW WHAT YOU 
# ARE DOING !!!
#

# GNU compiler
ifeq ($(CXX),g++)
	CFLAGS = -O3 -Wall
endif

# LLVM compiler
ifeq ($(CXX),llvm-g++)
	CFLAGS = -O3 -Wall
endif

# Intel compiler
ifeq ($(CXX),icpc)
	CFLAGS = -fast
endif

# Options needed for building shared lib
ARCH := $(shell uname)

ifeq ($(ARCH),Linux)
	LDFLAGS = -ldl
	SHAREDFLAGS = -shared
endif

ifeq ($(ARCH),Darwin)
	SHAREDFLAGS = -dynamiclib
endif
